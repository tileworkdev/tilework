@inject TargetGroupDetailViewModel ViewModel
@page "/lb/targetgroups/{Id}"

<MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>

<MudCard Outlined="true" Class="mb-4">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@ViewModel.Object.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert">
                <MudMenuItem>Edit</MudMenuItem>
                <MudMenuItem>Delete</MudMenuItem>
            </MudMenu>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
    </MudCardContent>
    <MudCardActions>
    </MudCardActions>
</MudCard>

<MudTable Outlined="true" Items="ViewModel.Object.Targets" Hover="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Targets</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary">Add target</MudButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Address</MudTh>
        <MudTh>Port</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Address</MudTd>
        <MudTd DataLabel="Targets">@context.Port</MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter]
    public string Id { get; set; }

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("Target groups", href: "/lb/targetgroups", icon: Icons.Material.Filled.AltRoute)
    };

    protected override async Task OnInitializedAsync()
    {
        await ViewModel.Initialize(Guid.Parse(Id));
        _items.Add(new BreadcrumbItem(ViewModel.Object.Name, href: null, disabled: true));
    }
}