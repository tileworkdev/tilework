@using Tilework.LoadBalancing.Enums
@using Tilework.LoadBalancing.Persistence.Models

@inject TargetGroupEditViewModel ViewModel
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@page "/lb/targetgroups/{Id}/edit"

<GenericEditview Title="@ViewModel.Object.Name" 
                 OnCancel="@(async () => NavigationManager.NavigateTo("/lb/targetgroups"))"
                 OnSubmit="Submit">
    <FormContent>
        <MudTextField Class="mb-5" @bind-Value="ViewModel.Object.Name"
                      Label="Name" Variant="Variant.Outlined" Required="true" />
    </FormContent>
</GenericEditview>

@code {
    [Parameter]
    public string Id { get; set; }

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("Target groups", href: "/lb/targetgroups", icon: Icons.Material.Filled.AltRoute)
    };

    protected override async Task OnInitializedAsync()
    {
        try {
            await ViewModel.Initialize(Guid.Parse(Id));
        }
        catch (KeyNotFoundException) {
            NavigationManager.NavigateTo("/lb/targetgroups");
            Snackbar.Add($"Target group {Id} not found", Severity.Error);
        }
        
        _items.Add(new BreadcrumbItem(ViewModel.Object.Name, href: $"/lb/targetgroups/{Id}"));
        _items.Add(new BreadcrumbItem("edit", href: null, disabled: true));
    }

    private async Task Submit()
    {
        try
        {
            await ViewModel.Save();
            NavigationManager.NavigateTo("/lb/targetgroups");
            Snackbar.Add("target group saved successfully!", Severity.Success);
        }
        catch(Exception ex)
        {
            Snackbar.Add($"Failed to save target group: {ex.Message}", Severity.Error);
        }
    }
}