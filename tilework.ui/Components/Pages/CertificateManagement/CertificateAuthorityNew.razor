@using Tilework.CertificateManagement.Persistence.Models
@using Tilework.CertificateManagement.Services
@using Tilework.Ui.Models
@using AutoMapper

@namespace Tilework.Ui.Components.Pages

@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject CertificateManagementService CertificateManagementService
@inject IMapper Mapper

@page "/cm/authorities/new"

<GenericEditview T="NewCertificateAuthorityForm" Model="@form" Title="New ACME CA" Breadcrumbs="@_breadcrumbs"
                 OnCancel="@(async () => NavigationManager.NavigateTo("/cm/authorities"))"
                 OnValidSubmit="Submit" />

@code {
    NewCertificateAuthorityForm form = new();

    private List<BreadcrumbItem> _breadcrumbs = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("ACME CAs", href: "/cm/authorities", icon: Icons.Material.Filled.AltRoute),
        new BreadcrumbItem("Create new", href: null, disabled: true, icon: Icons.Material.Filled.AltRoute)
    };

    private async Task Submit()
    {
        try
        {
            var authority = Mapper.Map<CertificateAuthority>(form);
            await CertificateManagementService.AddCertificateAuthority(authority);
            NavigationManager.NavigateTo("/cm/authorities");
            Snackbar.Add("ACME CA added successfully!", Severity.Success);
        }
        catch(Exception ex)
        {
            Snackbar.Add($"Failed to add ACME CA: {ex.Message}", Severity.Error);
        }
    }
}

