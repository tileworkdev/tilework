@using Tilework.Core.CertificateManagement.Models
@using Tilework.Core.Interfaces

@namespace Tilework.Ui.Components.Pages

@inject ICertificateManagementService _certificateManagementService
@inject NavigationManager _navigationManager


@page "/cm/authorities"

<GenericListview Title="Certificate authorities" Items="@_items" Actions="@_actions" Breadcrumbs="@_breadcrumbs">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Type</MudTh>
    </HeaderContent>
    <RowContent>
        <MudTd DataLabel="Name"><MudLink Href="@($"/cm/authorities/{context.Id}")">@context.Name</MudLink></MudTd>
        <MudTd DataLabel="Type">@context.Type</MudTd>
    </RowContent>
</GenericListview>

@code {
    public List<CertificateAuthorityDTO> _items { get; set; } = new();

    private List<BreadcrumbItem> _breadcrumbs = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("Certificate authorities", href: "/cm/authorities/", disabled: true, icon: Icons.Material.Filled.AltRoute),
    };

    private List<ActionItem> _actions = new List<ActionItem>
    {
        new ActionItem { Name = "Create new", Href = "/cm/authorities/new" }
    };

    protected override async Task OnInitializedAsync()
    {
        _items = await _certificateManagementService.GetCertificateAuthorities();
    }
}    
